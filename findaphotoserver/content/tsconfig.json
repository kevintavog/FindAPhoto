{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "ide": {
    "compileOnSave": false
},
  "atom": {
    "rewriteTsconfig": false
},
  "exclude": [
    "node_modules"
  ]
}
